<div class="panel panel-default">
  <div class="panel-heading">
    <h5>Listing Users</h5>
    <%= link_to 'New User', new_user_path, class: 'btn btn-primary btn-sm pull-right', role: 'button' %>
  </div>
  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Last Name</th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.name %></td>
          <td><%= user.last_name %></td>
          <td><%= link_to 'Show', user, class: 'btn btn-link' %></td>
          <td><%= link_to 'Edit', edit_user_path(user), class: 'btn btn-link' %></td>
          <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-link' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>